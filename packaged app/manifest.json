{
  "name": "Kiosk",
  "description": "Launch a URL as a fullscreen kiosk, also prevents sleep mode.",
  "manifest_version": 2,
  "version": "1",
  "kiosk_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/main.js"],
      "persistent": false
    }
  },
  "permissions": [
    "system.display",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage"
  ]
}