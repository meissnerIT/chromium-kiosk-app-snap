{
  "name": "Kiosk",
  "description": "Launch any URL as a full-screen kiosk.",
  "manifest_version": 2,
  "version": "5.1.0",
  "author": {
    "name": "ZEBRADOG",
    "email": "support@zebradog.com"
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/main.js"],
      "persistent": false
    }
  },
  "permissions": [
    "system.display",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage"
  ]
}
